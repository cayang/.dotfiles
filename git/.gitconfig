[user]
    name = Kevin Yang
    email = yangke@umich.edu

[core]
    editor = vim
    whitespace = trailing-space, space-before-tab
	excludesfile = ~/.gitexcludes
	pager = "less -ErX"
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = normal 
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    renames = copies
    mnemonicprefix = true
[merge]
    stat = true
[branch]
# rebase on pull rather than merge
    autosetuprebase = always
[push]
	default = simple
[alias]
    lg = log --color --graph --pretty=format:'%C(yellow)%h%Creset -%C(green)%d%Creset %s %C(magenta)(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit --
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --numstat
