[user]
    name = Kevin Yang
    email = yangke@umich.edu

[core]
    editor = vim
    whitespace = trailing-space, space-before-tab
	excludesfile = ~/.gitexcludes
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = normal 
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    renames = copies
    mnemonicprefix = true
[merge]
    stat = true
