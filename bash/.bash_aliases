# core
alias ls="ls --color=auto"
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"
alias grep="grep -n --color=auto"
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# git
alias g="git"
alias ga="g a"
alias gs="g s"
alias gc="g c"
alias gco="g co"
alias glg="g lg"

# vim
alias vim="vim --servername VIM"
